<h1><%= @article.title %></h1>
<h4>created at: <%= @article.created_at.strftime("%b %d %Y")%></h4>
<p><%= @article.body %></p>

<%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-primary btn-lg btn-space" %>
<%= link_to "Delete Article", article_path(@article), method: :delete, data: {confirm: "Are sure to delete this article ?"}, class: "btn btn-danger btn-lg btn-space" %>
